{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "paths": {
      "@root/*": ["./*"],
      "@functions/*": ["./src/utils/functions/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}